{
  "manifest_version": 3,
  "name": "Hypercast",
  "version": "0.0.5",
  "description": "Simple video synchronization service",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": [
        "https://*.hulu.com/*",
        "https://*.netflix.com/*",
        "https://*.hbomax.com/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"]
}
