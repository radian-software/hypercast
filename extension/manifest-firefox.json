{
  "manifest_version": 2,
  "name": "Hypercast",
  "version": "1.0.0",
  "description": "Simple video synchronization service",
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.hulu.com/*",
        "https://*.netflix.com/*",
        "https://*.hbomax.com/*",
        "https://*.youtube.com/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "permissions": ["storage"]
}
