{
  "manifest_version": 2,
  "name": "Hypercast",
  "version": "0.0.7",
  "description": "Simple video synchronization service",
  "icons": {
    "128": "icon128.png",
    "64": "icon64.png",
    "32": "icon32.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.hulu.com/*",
        "https://*.netflix.com/*",
        "https://*.hbomax.com/*",
        "https://*.youtube.com/*"
      ],
      "js": ["forge.min.js", "content-script.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "128": "icon128.png",
      "64": "icon64.png",
      "32": "icon32.png"
    },
    "browser_style": true
  },
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{ac3874f4-2e8a-4841-9846-30d2c8086671}"
    }
  }
}
